@model Asp5.Models.Product

@{
    ViewBag.Title = "Добавление продукта";
}

<link rel="stylesheet" href="~/css/createProduct.css" />

<div class="create-product-form">
    <form asp-action="Create" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Название</label>
            <input type="text" asp-for="Title" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Author" class="control-label">Автор</label>
            <input type="text" asp-for="Author" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Цена</label>
            <input type="number" asp-for="Price" class="form-control" step="0.01" required />
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label">Категория</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="">Выберите категорию</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </form>
</div>
